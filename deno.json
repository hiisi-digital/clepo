{
  "name": "@loru/clepo",
  "version": "0.5.0",
  "exports": "./mod.ts",
  "compilerOptions": {
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "imports": {
    "@std/fmt": "jsr:@std/fmt@^1.0.0",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/testing": "jsr:@std/testing@^1.0.0",
    "reflect-metadata": "npm:reflect-metadata@^0.2.2"
  },
  "lint": {
    "include": ["*.ts", "tests/"],
    "exclude": ["docs_ref/"],
    "rules": {
      "tags": ["recommended"],
      "include": [
        "ban-untagged-todo",
        "camelcase",
        "default-param-last",
        "eqeqeq",
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "no-await-in-loop",
        "no-console",
        "no-const-assign",
        "no-eval",
        "no-implicit-declare-namespace-export",
        "no-non-null-asserted-optional-chain",
        "no-self-compare",
        "no-sparse-arrays",
        "no-sync-fn-in-async-fn",
        "no-throw-literal",
        "prefer-ascii",
        "single-var-declarator",
        "verbatim-module-syntax"
      ],
      "exclude": [
        "no-console"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": ["*.ts", "*.md", "tests/"],
    "exclude": ["docs_ref/"]
  },
  "tasks": {
    "test": "deno test tests/ --allow-read --allow-env",
    "test:watch": "deno test tests/ --allow-read --allow-env --watch",
    "test:coverage": "deno test tests/ --allow-read --allow-env --coverage=coverage/",
    "lint": "deno lint",
    "lint:fix": "deno lint --fix",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "check": "deno check mod.ts",
    "all": "deno task fmt && deno task lint && deno task check && deno task test",
    "prepublish": "deno task all"
  },
  "publish": {
    "include": [
      "mod.ts",
      "arg.ts",
      "arg_matcher.ts",
      "command.ts",
      "decorators.ts",
      "error.ts",
      "help.ts",
      "lexer.ts",
      "parser.ts",
      "reflect.ts",
      "types.ts",
      "util.ts",
      "README.md",
      "LICENSE"
    ],
    "exclude": [
      "tests/",
      "docs_ref/",
      "research/",
      "PLAN.md",
      "ANALYSIS.md",
      "RELEASE_NOTES.md",
      ".githooks/"
    ]
  }
}
